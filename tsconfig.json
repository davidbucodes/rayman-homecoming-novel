{
	"compilerOptions": {
		"esModuleInterop": true,
		"outDir": "./dist/",
		"noImplicitAny": true,
		"baseUrl": ".",
		"module": "ES2020",
		"target": "ES2020",
		"allowJs": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"sourceMap": true,
		"allowSyntheticDefaultImports": true
	},
	"ts-node": {
		"compilerOptions": {
			"module": "CommonJS"
		}
	}
}
